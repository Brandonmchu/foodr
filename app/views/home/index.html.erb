<h1>FaceBook Stuff</h1>
<table class="table table-striped">
  <tr>
  	<th>Thing</th>
  	<th>Details</th>
  </tr>
  <tr>
		<td>Name</td>
	  <td><%= @userfb.name %></td>
  </tr>
  <tr>
	  <td>City</td>
	  <td><%= @location %></td>
  </tr>
  <tr>
	  <td>Things they Like</td>
	  <td><%= @userfb.likes.map {|d| d.category} %></td>
  </tr>
</table>

<%= form_tag root_path, method: :get do %>
  <%= text_field_tag :location, 'Enter your search query here' %> 
  <%= submit_tag "go" %>
<% end %>


<h1>Yelp Stuff</h1>
