<h1>FaceBook Stuff</h1>
<table class="table table-striped">
  <tr>
  	<th>Thing</th>
  	<th>Details</th>
  </tr>
  <tr>
		<td>Name</td>
	  <td><%= current_user.name %></td>
  </tr>
  <tr>
	  <td>City</td>
	  <td><%= current_user.location %></td>
  </tr>
  <tr>
	  <td>Things they Like</td>
	  <td><%= @userfb.likes.map {|d| d.category} %></td>
  </tr>
</table>

<!-- changes search parameters-->
<%= form_tag root_path, method: :get do %>
  <% if params[:location] %>
    <%= text_field_tag :location, params[:location] %> 
  <% else %>
    <%= text_field_tag :location, current_user.location %> 
  <% end %>
  <%= number_field_tag :radius, 40000 %>
  <%= text_field_tag :category %>
  <%= radio_button_tag :deals, true %>
  <%= radio_button_tag :deals, false %>
  <%= submit_tag "go" %>
<% end %>


